<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme">
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/rounded_conner_button</item>
    </style>

    <style name="AppTheme.Text.Headline" parent="AppTheme">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">34sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Header" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Text.Body" parent="AppTheme">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.AppBar" parent="AppTheme">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

</resources>
